{
  "name": "@dev.hiconic/local-first",
  "version": "1.0.50",
  "description": "A js library that supports local-first web applications based on CRDT + MVC principles",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test-watch": "vitest",
    "test": "vitest --run"
  },
  "keywords": [],
  "author": "Dirk Scheffler",
  "license": "Apache-2.0",
  "dependencies": {
    "@dev.hiconic/gm_essential-reason-model": "2.0.x",
    "@dev.hiconic/tf.js_hc-js-api": "^3.0.10",
    "@xtao-org/jsonhilo": "^0.4.1",
    "crypto-js": "^4.2.0",
    "solid-js": "^1.9.3"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.13.5",
    "fake-indexeddb": "^6.0.0",
    "jsdom": "^25.0.1",
    "typescript": "^5.7.2",
    "vite-plugin-solid": "^2.11.0",
    "vitest": "^2.1.6"
  },
  "source": "src/local-first.ts",
  "main": "dist/local-first.js",
  "types": "dist/local-first.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/local-first.d.ts",
      "default": "./dist/local-first.js"
    },
    "./continuation": {
      "types": "./dist/continuation.d.ts",
      "default": "./dist/continuation.js"
    },
    "./entity-signals": {
      "types": "./dist/entity-signals.d.ts",
      "default": "./dist/entity-signals.js"
    },
    "./managed-entities": {
      "types": "./dist/managed-entities.d.ts",
      "default": "./dist/managed-entities.js"
    },
    "./manipulation-buffer": {
      "types": "./dist/manipulation-buffer.d.ts",
      "default": "./dist/manipulation-buffer.js"
    },
    "./manipulation-marshaler": {
      "types": "./dist/manipulation-marshaler.d.ts",
      "default": "./dist/manipulation-marshaler.js"
    },
    "./json-marshaller": {
      "types": "./dist/json/json-marshaller.d.ts",
      "default": "./dist/json/json-marshaller.js"
    },
    "./crypto": {
      "types": "./dist/crypto.d.ts",
      "default": "./dist/crypto.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiconic-os/npm.local-first.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
