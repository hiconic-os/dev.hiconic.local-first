{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "noUnusedLocals": true,
    "sourceMap": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*"
  ]
}
