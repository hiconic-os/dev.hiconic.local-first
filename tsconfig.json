{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/*"
  ]
}
